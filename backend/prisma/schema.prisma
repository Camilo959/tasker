generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  // ðŸ”¹ Tareas asignadas al usuario
  assignedTasks Task[] @relation("AssignedTasks")

  // ðŸ”¹ Tareas solicitadas por el usuario
  requestedTasks Task[] @relation("RequestedTasks")

  // ðŸ”¹ Registros de tiempo realizados por el usuario
  timeEntries TimeEntry[]
}

model Department {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks     Task[]
}

model Task {
  id            Int         @id @default(autoincrement())
  title         String
  description   String?

  // ðŸ”¹ QuiÃ©n solicitÃ³ la tarea
  requestedById Int
  requestedBy   User        @relation("RequestedTasks", fields: [requestedById], references: [id], onDelete: Cascade)

  // ðŸ”¹ Usuario responsable
  assignedToId  Int
  assignedTo    User        @relation("AssignedTasks", fields: [assignedToId], references: [id], onDelete: Cascade)

  departmentId  Int?
  department    Department? @relation(fields: [departmentId], references: [id], onDelete: SetNull)

  status        TaskStatus  @default(PENDING)

  // âœ… NUEVOS: Resumen de tiempo en la tarea
  startDate     DateTime?   // CuÃ¡ndo se empezÃ³
  hoursSpent    Float       @default(0) // Total de horas
  workDescription String?   // DescripciÃ³n del trabajo realizado

  // ðŸ”¹ Registros detallados de tiempo
  timeEntries   TimeEntry[]

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

}

model TimeEntry {
  id              Int      @id @default(autoincrement())

  // ðŸ”¹ Referencia a la tarea
  taskId          Int
  task            Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  // ðŸ”¹ QuiÃ©n registrÃ³ el tiempo
  userId          Int
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // ðŸ”¹ Detalles del registro de tiempo
  date            DateTime // Fecha en que se trabajÃ³
  hoursWorked     Float    // Horas trabajadas en este registro
  description     String?  // DescripciÃ³n de quÃ© se hizo (ej: "ImplementÃ© login", "Debuggeo de errores")

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

}
enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}

enum Role {
  ADMIN
  EMPLOYEE
}
