generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  // ðŸ”¹ Tareas asignadas al usuario
  assignedTasks Task[] @relation("AssignedTasks")

  // ðŸ”¹ Tareas solicitadas por el usuario
  requestedTasks Task[] @relation("RequestedTasks")

  // ðŸ”¹ Registros de tiempo realizados por el usuario
  timeEntries TimeEntry[]
}

model Department {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks     Task[]
}

model Task {
  id            Int        @id @default(autoincrement())
  title         String
  description   String?

  // ðŸ”¹ QuiÃ©n solicitÃ³ la tarea
  requestedById Int
  requestedBy   User       @relation("RequestedTasks", fields: [requestedById],  references: [id])

  // ðŸ”¹ Usuario responsable
  assignedToId  Int
  assignedTo    User       @relation("AssignedTasks",fields: [assignedToId],references: [id])

  departmentId  Int?
  department    Department? @relation(fields: [departmentId], references: [id])

  status        TaskStatus @default(PENDING)

  // ðŸ”¹ Registros de tiempo
  timeEntries   TimeEntry[]

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model TimeEntry {
  id          Int      @id @default(autoincrement())

  taskId     Int
  task       Task     @relation(fields: [taskId], references: [id])

  userId     Int
  user       User     @relation(fields: [userId], references: [id])

  startTime  DateTime
  hoursSpent Float
  workDescription String

  createdAt DateTime @default(now())
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}

enum Role {
  ADMIN
  EMPLOYEE
}
