{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": "./src",
    "outDir": "./dist",

    "moduleResolution": "node",
    "types": ["node"],

    "strict": true,
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src", "src/types/**/*.d.ts"],
}
